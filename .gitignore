# Ignore bundler config
/.bundle

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore pidfiles
/tmp/pids/*.pid

# Ignore uploaded files in development
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore master key for decrypting credentials
/config/master.key
/config/credentials/*.key

# Environment normalization
/.env*
!/.env.example

# Ignore database.yml for local development
# /config/database.yml

# Ignore test coverage reports
/coverage/

# Ignore public assets
/public/assets
/public/packs
/public/packs-test
/node_modules/
/yarn-error.log
yarn-debug.log*
.yarn-integrity

# Ignore Mac and Linux file system files
*.swp
.DS_Store

# Ignore IDE-specific files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Ignore specific to Rails 6+ 
/app/assets/builds/*
!/app/assets/builds/.keep
/node_modules/ 
# Ignore master key for decrypting credentials and more.
/config/master.key
